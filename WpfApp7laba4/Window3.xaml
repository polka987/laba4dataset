<Window x:Class="WpfApp7laba4.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7laba4"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox Name="StoreNameComboBox" Grid.ColumnSpan="3" Background="LightGray" SelectionChanged="StoreNameComboBox_SelectionChanged" ></ComboBox>
            <Button Name="FilterButton" Content="Очистить фильтры" Grid.Column="3" Grid.Row="0" Background="Yellow" Click="FilterButton_Click"></Button>
            <Button Name="MainButton" Content="Главная" Grid.Column="4" Grid.Row="0" Background="MediumPurple" Click="MainButton_Click" ></Button>
            
            <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Name="rabit"></DataGrid>
        </Grid>
    </Grid>
</Window>
